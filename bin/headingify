#! /usr/bin/env ruby

require 'headingify'

base = ""

if ARGV.length == 0
  p "Here's how to use it, dumbass"
end

ARGV.each_with_index do |s, i|
  if s =~ /-*h$/ || s =~ /-*help$/
    p "Here's how to use it, dumbass"
    p "Here's some help"
  elsif s =~ /-*v$/ || s =~ /-*version$/
    p "Here's some version info"
  elsif i == 0
    base = s
    p "received base : \"#{base}\""
    p "output : \"#{base.headingify}\""
  else
    p "Here's how to use it, dumbass"
  end
end
